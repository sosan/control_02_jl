include ../config/config.pug
include ../mixins/title.pug
include ../mixins/seosocial.pug
include ../mixins/seogeneral.pug
include ../mixins/seocompleto.pug

//- Usamos este bloque para inicializar las variables
//- que podremos usar en las page (index.pug, quienes.pug, etc...)
block variableslocales
    -const dummy = false;

doctype 
html(lang=datasite["site"]["meta"]["default-language"])
    head 
        include head.pug

    body
        div#container
            // *** ESTRUCTURA SEMÁNTICA ***
            // Header (encabezado de la página, zona superior)
            // Encabezado
            header.header
                include header.pug
            // Main (centro de la página, zona central)
            main.main
                block main
            // Footer (final de la página, zona inferior)
            footer.footer
                include footer.pug
